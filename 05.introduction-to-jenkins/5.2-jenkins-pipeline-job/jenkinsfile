pipeline {
    agent any

    stages {
        stage('Connect To Github') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[
                        credentialsId: '86b7afca-b969-47ef-9401-59012d947367',
                        url: 'https://github.com/Techytobii/jenkins-scm.git'
                    ]]
                )
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    bat 'docker build -t myapp:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    bat 'docker run -itd -p 8081:80 myapp:latest'
                }
            }
        }
    }
}
