pipeline {
    agent any

    stages {
        stage('Connect To Github') {
            steps {
                git branch: 'main', url: 'https://github.com/Techytobii/jenkins-scm.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t myapp:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -itd -p 8081:80 myapp:latest'
                }
            }
        }
    }
}
